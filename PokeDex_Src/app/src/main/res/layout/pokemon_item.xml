<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/pixel001"
        android:id="@+id/list1_pic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:text="001"
        android:textColor="#2f7ec2"
        android:id="@+id/list1_num"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:text="妙蛙种子"
        android:textColor="#2f7ec2"
        android:id="@+id/list1_name"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/attribute_grass"
        android:id="@+id/list1_attribute1"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/attribute_poison"
        android:id="@+id/list1_attribute2"/>


</LinearLayout>